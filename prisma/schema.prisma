model User {
  id              Int      @id @default(autoincrement())
  createdAt       DateTime @default(now())
  email           String   @unique
  username        String   @unique
  permissionLevel Int      @default(1)
  hashedPassword  String
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
